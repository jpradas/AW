<%if(amigos.length !== 0){ %>

  <div class="friends">
    <ul class="lista-amigos">

  <% amigos.forEach(amigo =>{ %>
    <li>
      <div class="izquierda">
        <img class="img-perfil" src="/imagen_perfil/<%= amigo.email %>" alt="avatar">
        <form action="profile.html" method="post">
          <input type="hidden" value="<%= amigo.email %>" name="nombre">
          <input id="boton-perfil" type="submit" value="<%= amigo.nombre_completo %>">
        </form>
      </div>
      <div class="derecha">
        <% if(amigo.acierta === null){ %>
        <form action="/opcionesAdivinar" method="post">
          <input type="hidden" value="<%= amigo.email %>" name="nombre">
          <input type="hidden" name="idPregunta" value="<%= preg.id %>">
          <input type="hidden" name="pregunta" value="<%= preg.texto %>">
          <input type="hidden" name="opcIniciales" value="<%= preg.opcionesIniciales %>">
          <input type="hidden" name="opcContestada" value="<%= amigo.id_opcion %>">
          <input id="boton" type="submit" value="Adivinar">
        </form>
        <% } else if (amigo.acierta){ %>
            <span>Has acertado</span>
        <% } else{ %>
            <span>Has fallado</span>
        <% }%>
      </div>
    </li>
    <% }) %>


    </ul>
  </div>

<%  } %>
